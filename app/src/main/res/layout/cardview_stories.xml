<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_goneMarginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:Layout_constraintLeft_toLeftOf="parent"
            app:Layout_constraintTop_toToptOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageStory"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:src="@drawable/icon_iachat"
                android:layout_centerInParent="true"/>
            <com.devlomi.circularstatusview.CircularStatusView
                android:id="@+id/circularStories"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                app:portion_color="@color/colorPrimaryLight"
                app:portion_spacing="4dp"
                app:portion_width="2dp"
                app:portions_count="3"/>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/textUsernameView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de Usuario"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_weight="1"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textSize="16dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>