<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ImagePagerFragment"
    app:cardBackgroundColor="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/background_message"
            android:scaleType="centerCrop"
            android:layout_marginTop="50dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/imageViewPhoto"
                android:layout_width="25dp"

                android:layout_height="25dp"
                android:src="@drawable/ic_image_galery_white"/>
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:background="@color/white"
                android:layout_marginLeft="9dp"/>
            <EditText
                android:id="@+id/editTextIdea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Escribe una idea ..."
                android:textColorHint="@color/colorGrayLight"
                android:textColor="@color/white"
                android:background="@null"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="15dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imageViewSend"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_send"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageViewBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_arrow_back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
</androidx.cardview.widget.CardView>